<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#FFFFFF"><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:contentDescription="Ảnh sản phẩm"
        android:background="@drawable/edit_text_background"
        android:src="@drawable/ic_launcher_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#3D2B1F"
        android:maxLines="2"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:textColor="#7A6F62"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="2dp" />
    <TextView
    android:id="@+id/tvPrice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="25.000 đ"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="#A0522D"
    android:layout_marginTop="8dp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/customer_controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"> <LinearLayout
        android:id="@+id/quantity_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"> <ImageButton
        android:id="@+id/btnMinus"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_media_previous"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Giảm số lượng"
        card_view:tint="#A0522D" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="0"
            android:textSize="16sp"
            android:textColor="#333" />

        <ImageButton
            android:id="@+id/btnPlus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_media_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tăng số lượng"
            card_view:tint="#A0522D" />
    </LinearLayout>

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/bg_add_to_cart_button"
            android:paddingVertical="8dp"
            android:gravity="center"/>
    </LinearLayout>

    <!--Phần ADMIN CHỈNH SỬA-->
    <LinearLayout
        android:id="@+id/admin_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="8dp"
        android:visibility="gone"> <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_edit"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Sửa"
        card_view:tint="#A0522D" />
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Xóa"
            android:layout_marginStart="8dp"
            card_view:tint="#D32F2F" />
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>
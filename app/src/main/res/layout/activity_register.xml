<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5ECD7"
    android:padding="24dp"
    tools:context=".UI.Login.RegisterActivity"> <ImageButton
    android:id="@+id/btnBack"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/ic_arrow_back"
    android:fitsSystemWindows="true"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Quay lại"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvRegisterTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đăng ký tài khoản mới"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4E342E"
        android:gravity="center"
        android:fontFamily="serif"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Họ"
        android:drawableStart="@drawable/ic_person_vintage"
        android:drawablePadding="10dp"
        android:padding="14dp"
        android:background="@drawable/bg_vintage_input"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#A1887F"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvRegisterTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Tên"
        android:drawableStart="@drawable/ic_person_vintage"
        android:drawablePadding="10dp"
        android:padding="14dp"
        android:background="@drawable/bg_vintage_input"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#A1887F"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etLastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etRegisterEmail"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Email"
        android:drawableStart="@drawable/ic_email_vintage"
        android:drawablePadding="10dp"
        android:padding="14dp"
        android:background="@drawable/bg_vintage_input"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#A1887F"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etFirstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Mật khẩu"
        android:drawableStart="@drawable/ic_lock_vintage"
        android:drawablePadding="10dp"
        android:padding="14dp"
        android:background="@drawable/bg_vintage_input"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#A1887F"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etRegisterEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnRegisterUser"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Đăng ký"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#8B5E3C"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/etRegisterPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
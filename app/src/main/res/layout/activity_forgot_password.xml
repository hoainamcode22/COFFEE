<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5ECD7"
    android:padding="24dp"
    tools:context=".UI.Login.ForgotPasswordActivity"> <ImageButton
    android:id="@+id/btnBackForgotPassword"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/ic_arrow_back"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Quay lại"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:fitsSystemWindows="true"
    android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvForgotPasswordTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quên Mật Khẩu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4E342E"
        android:gravity="center"
        android:fontFamily="serif"
        app:layout_constraintTop_toBottomOf="@id/btnBackForgotPassword"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvForgotPasswordDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vui lòng nhập địa chỉ email đã đăng ký để đặt lại mật khẩu của bạn."
        android:textSize="14sp"
        android:textColor="#6D4C41"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvForgotPasswordTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etForgotEmail"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Email của bạn"
        android:drawableStart="@drawable/ic_email_vintage"
        android:drawablePadding="10dp"
        android:padding="14dp"
        android:background="@drawable/bg_vintage_input"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#A1887F"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvForgotPasswordDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Gửi yêu cầu đặt lại mật khẩu"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#8B5E3C"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/etForgotEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
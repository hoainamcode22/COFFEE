<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5ECD7"
    android:padding="24dp"
    android:fitsSystemWindows="true"
    tools:context=".UI.profile.EditProfileActivity">

    <!-- Header / Back button -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Quay lại" />

    <TextView
        android:id="@+id/tvEditProfileTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa thông tin"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4E342E"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBack"
        app:layout_constraintBottom_toBottomOf="@id/ivBack" />

    <!-- Email người dùng -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="email@example.com"
        android:textSize="16sp"
        android:textColor="#5D4037"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvEditProfileTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sửa tên -->
    <EditText
        android:id="@+id/etNewName"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Tên mới"
        android:drawableStart="@drawable/ic_profile_vintage"
        android:drawablePadding="10dp"
        android:padding="14dp"
        android:background="@drawable/bg_vintage_input"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#A1887F"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút Lưu -->
    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Lưu thay đổi"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#8B5E3C"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etNewName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

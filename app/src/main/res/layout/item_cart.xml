<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#FFF8E1"
    android:fitsSystemWindows="true"
    android:layout_marginBottom="8dp">

    <!-- Hình ảnh sản phẩm -->
    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_placeholder1"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"/>

    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCartProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#555555"/>

        <TextView
            android:id="@+id/tvCartProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 30.000 VNĐ"
            android:textSize="14sp"
            android:textColor="#795548"/>

    </LinearLayout>

    <!-- Điều chỉnh số lượng -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp">

        <ImageButton
            android:id="@+id/btnCartMinus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_minus"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Giảm số lượng"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvCartQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textColor="#555555"
            android:paddingHorizontal="8dp"/>


        <!-- Nút tăng sản phẩm -->
        <ImageButton
            android:id="@+id/btnCartPlus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tăng số lượng"
            android:layout_marginStart="20dp"/>

        <!-- Nút xóa sản phẩm -->
        <ImageButton
            android:id="@+id/btnCartRemove"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_minus"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Xóa sản phẩm"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
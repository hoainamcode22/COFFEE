<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5ECD7"
    android:padding="24dp"
    tools:context=".Admin.AdminActivity">

    <TextView
        android:id="@+id/tvAdminDashboardTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chào mừng Admin!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#4E342E"
        android:gravity="center"
        android:fontFamily="serif"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvAdminDashboardSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đây là trang quản trị của bạn"
        android:textSize="16sp"
        android:textColor="#6D4C41"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvAdminDashboardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnManageProducts"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Quản lý Sản phẩm"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#8B5E3C"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvAdminDashboardSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCustomerSupport"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Hỗ trợ Khách hàng"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#6D4C41"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageProducts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnLogoutAdmin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Đăng xuất"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#A1887F"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnCustomerSupport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
